<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/large"
    android:layout_marginVertical="@dimen/medium"
    app:cardElevation="@dimen/small"

    style="?attr/materialCardViewFilledStyle"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherCodePropIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_weather_error" />

        <TextView
            android:id="@+id/propName"
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/medium"
            android:layout_marginStart="@dimen/large"
            android:layout_weight="1"
            android:fontFamily="@font/lexend"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            tools:text="Humidity" />

        <TextView
            android:id="@+id/minValue"
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend"
            android:padding="@dimen/medium"
            tools:text="28%" />

        <View
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="?attr/colorTertiary" />

        <TextView
            android:id="@+id/maxValue"
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/large"
            android:fontFamily="@font/lexend"
            android:padding="@dimen/medium"
            tools:text="35%" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>