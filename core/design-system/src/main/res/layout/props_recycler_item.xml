<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/large"
    android:layout_marginVertical="@dimen/medium"
    app:cardBackgroundColor="?attr/colorTertiaryContainer"
    app:cardCornerRadius="@dimen/dimen_20"
    app:cardElevation="@dimen/small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherPropIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:padding="@dimen/small"
            android:background="@drawable/round_border"
            android:contentDescription="@null"
            android:src="@drawable/ic_weather_error" />

        <TextView
            android:id="@+id/propName"
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/medium"
            android:layout_marginStart="@dimen/large"
            android:layout_weight="1"
            android:fontFamily="@font/lexend"
            android:textColor="?attr/colorOnTertiaryContainer"
            android:textStyle="bold"
            tools:text="Humidity" />

        <TextView
            android:id="@+id/value"
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend"
            android:padding="@dimen/medium"
            android:textColor="?attr/colorOnTertiaryContainer"
            tools:text="28km/h" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>